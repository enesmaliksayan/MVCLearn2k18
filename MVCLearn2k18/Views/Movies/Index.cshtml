@model MVCLearn2k18.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (Model.Movies.Count == 0)
{
    <p>We don't have any movie yet</p>
}
else
{
    <ul>
        @foreach (var c in Model.Movies)
        {
            <li> @c.Name </li>
        }
    </ul>
}


